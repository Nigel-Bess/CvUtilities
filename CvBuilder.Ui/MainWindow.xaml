<Window x:Class="CvBuilder.Ui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:lgging="clr-namespace:Fulfil.Visualization.ErrorLogging"
        xmlns:local="clr-namespace:CvBuilder.Ui"
       
        xmlns:deploy="clr-namespace:CvBuilder.Ui.Deploy"
        mc:Ignorable="d"
        Title="CV Utilities" Height="550" Width="800"
        d:DataContext="{d:DesignInstance Type=local:MainWindowViewModel}">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="150"/>
        </Grid.RowDefinitions>
        <Menu Grid.Row="0">
            <MenuItem Header="Settings">
                <MenuItem Header="GH Credentials" Command="{Binding OpenGithubCredentials}" />
            </MenuItem>
        </Menu>
        <TabControl Grid.Row="1">
            <TabItem Header="Build and Deploy Dispense">
                <deploy:BuildAndDeployControl DataContext="{Binding BuildAndDeployVm}"/>
             </TabItem>
            <TabItem Header="Dispense Offline Test">
                
            </TabItem>
        </TabControl>
        <lgging:ErrorLog Grid.Row="2"/>
    </Grid>
</Window>
