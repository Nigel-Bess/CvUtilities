<UserControl x:Class="CvBuilder.Ui.ScriptRunReportControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CvBuilder.Ui"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance Type=local:ScriptRunReportViewModel}">
    <Grid>
        <StackPanel Orientation="Horizontal" Visibility="{Binding ProgressVisibility}">
            <Label Content="{Binding ActionDescription}"/>
            <ProgressBar Minimum="0" Maximum="1" Value="{Binding Progress}"/>
        </StackPanel>
        <Label Content="Done" Visibility="{Binding CompleteVisibility}"/>
    </Grid>

</UserControl>
