<UserControl x:Class="CvBuilder.Ui.Terminal.TerminalView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CvBuilder.Ui.Terminal"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance Type=local:TerminalViewModel}">
    <UserControl.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="Black"/>
            <Setter Property="Foreground" Value="Lime"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="25"/>            
        </Grid.RowDefinitions>
        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" x:Name="ScrollViewer">
            <TextBox IsReadOnly="True"
             Text="{Binding TerminalOutput}"
             TextWrapping="NoWrap"/>
        </ScrollViewer>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <TextBox IsReadOnly="True" AcceptsReturn="False"
         Text="{Binding CurrentDirectoryStr}"
         TextWrapping="NoWrap" Grid.Column="0"/>
            <TextBox IsReadOnly="True" AcceptsReturn="False"
    TextWrapping="NoWrap" Grid.Column="1" Text=">"/>
            <TextBox Text="{Binding TerminalInput, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" AcceptsReturn="False" Grid.Column="2">
            <TextBox.InputBindings>
                <KeyBinding Command="{Binding EnterCommand}" Key="Enter"/>
                <KeyBinding Command="{Binding EnterCommand}" Key="Return"/>
            </TextBox.InputBindings>
        </TextBox>
        </Grid>
    </Grid>
</UserControl>
