<UserControl x:Class="CvBuilder.Ui.DeployDispense.MultiDeploy"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CvBuilder.Ui.DeployDispense"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             xmlns:outer="clr-namespace:CvBuilder.Ui"
             d:DataContext="{d:DesignInstance Type=local:MultiDeployViewModel}">
    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            
        </ScrollViewer>
        <ItemsControl ItemsSource="{Binding Runners}" Margin="10">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <outer:ScriptRunReportControl DataContext="{Binding ReportViewModel}" Height="25"/>
                        <Button Content="Open Terminal" Command="{Binding OpenTerminalWindowCommand}" Grid.Column="1" Padding="5" Margin="5,0"/>
                    </Grid>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>
</UserControl>
