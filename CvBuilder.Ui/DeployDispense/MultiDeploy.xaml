<UserControl x:Class="CvBuilder.Ui.DeployDispense.MultiDeploy"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CvBuilder.Ui.DeployDispense"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             xmlns:outer="clr-namespace:CvBuilder.Ui"
             d:DataContext="{d:DesignInstance Type=local:MultiDeployViewModel}">
    <Grid>
        <ItemsControl ItemsSource="{Binding Runners}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <outer:ScriptRunReportControl DataContext="{Binding ReportViewModel}"/>
                        <Button Content="Open Terminal" Command="{Binding OpenTerminalCommand}"/>
                    </StackPanel>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>
</UserControl>
